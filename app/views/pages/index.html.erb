<% if user_signed_in? %>
  <h1 class="text-3xl">Welcome Home, <%= current_user.name %></h1>
  <div class="mt-4">
    <%= link_to "Profile", "user/profile", class: "text-blue-500 hover:underline mr-4" %>
    <%= link_to 'Sign out', destroy_user_session_path, class: "text-red-500 hover:underline", data: { turbo_method: :delete } %>
  </div>
<% else %>
  <h1 class="text-3xl">Home</h1>
  <%= link_to 'Sign in', new_user_session_path, class: "text-blue-500 hover:underline text-lg mt-4" %>
  <br />
<% end %>

<%= link_to 'Create Post', new_post_path, class: "text-blue-500 hover:underline text-lg mt-4" %>
