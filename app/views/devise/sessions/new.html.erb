<div class="bg-green-50 p-8 shadow-md text-center rounded-3xl">
  <h2 class="text-2xl font-bold mb-4"> LOGIN </h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="mb-6">
<!--      <%#= f.label :Username_or_Email, class:"label" %><br/>-->
      <%= f.text_field :login,class: "input rounded-3xl", autofocus: true, placeholder: "Username or Email"  %>
    </div>

    <div class="field mb-4">
<!--      <%#= f.label :password %><br />-->
      <%= f.password_field :password, class: "input rounded-3xl", placeholder: "Enter Your Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="remember_me">
          <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
          Remember Me
        </label>
      </div>
    <% end %>

    <div class="mt-4 mb-4">
      <%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>