<div class="bg-green-50 p-8 rounded-3xl-lg shadow-md text-left rounded-3xl-3xl">
  <h2 class="text-2xl font-bold mb-4">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
<!--      <label for="username" class="label">Username</label><br/>-->
      <input type="text" id="username" name="username" value="<%= resource.username %>" autofocus="true" class="input rounded-3xl" placeholder="Username">
    </div>

    <div class="mb-4">
<!--      <label for="name" class="label">Name</label><br />-->
      <input type="text" id="name" name="name" value="<%= resource.name %>" autofocus="true" class="input rounded-3xl" placeholder="Name">
    </div>

    <div class="mb-4">
<!--      <label for="lastName" class="label">Last Name</label><br />-->
      <input type="text" id="lastName" name="lastName" value="<%= resource.lastName %>" autofocus="true" class="input rounded-3xl" placeholder="Last Name">
    </div>

    <div class="mb-4">
<!--      <label for="contact_number" class="label">Contact Number</label><br />-->
      <input type="text" id="contact_number" name="contact_number" value="<%= resource.contact_number %>" autofocus="true" class="input rounded-3xl" placeholder="Contact Number">
    </div>

    <div class="mb-4">
<!--      <label class="label">Gender</label><br />-->
      <input type="radio" id="male" name="gender" value="Male" class="input rounded-3xl" autofocus="true">
      <label for="male" class="label">Male</label><br>
      <input type="radio" id="female" name="gender" value="Female" class="input rounded-3xl" autofocus="true">
      <label for="female" class="label">Female</label>
    </div>

    <div class="mb-4">
<!--      <label for="date_of_birth" class="label">Date of Birth</label><br />-->
      <input type="date" id="date_of_birth" name="date_of_birth" value="<%= resource.date_of_birth %>" class="input rounded-3xl" autofocus="true">
    </div>

    <div class="mb-4">
<!--      <label for="image" class="label">Image</label><br />-->
      <input type="file" id="image" name="image" accept="image/png, image/jpeg, image/jpg" class="input rounded-3xl" autofocus="true">
    </div>

    <div class="mb-4">
<!--      <label for="email" class="label">Email</label><br />-->
      <input type="email" id="email" name="email" value="<%= resource.email %>" autofocus="true" class="input rounded-3xl" placeholder="Email" autocomplete="email">
    </div>

    <div class="mb-4">
      <label for="password" class="label">Password</label>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <input type="password" id="password" name="password" class="input rounded-3xl" autocomplete="new-password">
    </div>

    <div class="mb-4">
      <label for="password_confirmation" class="label">Password Confirmation</label><br />
      <input type="password" id="password_confirmation" name="password_confirmation" class="input rounded-3xl" autocomplete="new-password">
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
