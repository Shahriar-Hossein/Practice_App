      </div>
    </div>

  <!--  <div align="center" class="m-2 ">-->
      <div class="flex items-center justify-center content-center my-6 mt-8">
        <%= form.button do %>
          <div class="text-lg tracking-wider rounded-3xl text-white font-semibold bg-green-500 mt-2 py-3 px-8 mx-2 ">
            <% if @post.id.nil?   %>
              <%= 'Create Post' %>
            <%else %>
              <%= 'Update Post' %>
            <%end %>
          </div>
        <% end %>
          <%= link_to "Back", :back, class: "bg-red-500 text-lg tracking-wider rounded-3xl text-white font-semibold mt-2 py-3 px-8 mx-2" %>
      </div>
