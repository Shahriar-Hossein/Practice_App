
<%= form_with model: @post , style:'display:flex;' do |form| %>
  <div class="">
    <div class="m-2">
      <%= hidden_field :user_id, value: current_user.id %>
      <%= form.label :title, class:"pl-5 font-semibold text-lg" %>
      <%= form.text_field :title, class:"mt-2 pl-5 w-full h-14 rounded-2xl ", placeholder:"Title" %>
      <% @post.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="m-2">
      <%= form.label :body, class:"pl-5 font-semibold text-lg" %>
      <%= form.text_area :body, rows: 3, class:"mt-2 pl-5 w-full rounded-2xl resize-none ", placeholder:"Body" %>
      <% @post.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class=" m-2 ">
      <%= form.label :picture, class:"pl-5 font-semibold text-lg " %>
