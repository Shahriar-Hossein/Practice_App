<div class="text-left">
    <% if @post.picture.attached? %>
      <%= image_tag @post.picture, class: "w-fit h-96 rounded-3xl"%><br/>
    <% end %>
  <div class="flex items-center">
    <div>
      <%= image_tag @post.user.image, class: "w-16 h-16 rounded-full mr-6" %>
    </div>
    <div class="flex-column">
      <div class="font-bold text-2xl">
        <%= "#{@post.user.name} #{@post.user.lastName}"%>
      </div>
      <div>
        <%= time_ago_in_words(@post.created_at) %> ago
      </div>
    </div>
  </div>
    <h1 class="text-4xl font-bold text-black mb-3 mt-8 break-word"><%= @post.title %></h1>
    <p class="text-base text-black line-clamp-2"><%= @post.body %></p>
    <% if can? :update, @post %>
      <ul class="mt-4">
        <%= link_to "Edit", edit_post_path(@post), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Delete", post_path(@post), class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded", data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        } %>
      </ul>
    <% end %>
    <% if can? :create, Comment %>
      <h2 class="text-xl font-semibold mt-4">Add a comment:</h2>
      <%= render 'comments/form' %>
    <% end %>
  </div>
<div class="w-full text-center">
  <h2 class="mx-auto w-3/4 text-center mb-8">Comments</h2>
  <%= render @post.comments.reverse %>
</div>
