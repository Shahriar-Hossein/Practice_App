<h1>Posts </h1>

<% if can? :create, Post %>
  <div style="text-decoration:none">
    <button type="button" ><%= link_to "New Post", new_post_path %> </button>
  </div>
<% end %>

<ul>
  <% @posts.each do |p| %>
  <li>
    <%= link_to p.title, p %>
  </li> 
  <% end %>
</ul>
