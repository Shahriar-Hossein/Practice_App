<% end %>
<ul>
  <% @posts.each do |p| %>
    <li class="mx-auto w-3/4 text-center mb-8">
      <% if p.picture.attached? %>
        <%= image_tag p.picture, class: "post-image mx-auto rounded-lg", style: "width: 200px; height: 150px;" %><br/>
      <% end %>
      <%= p.title %> <br/>
      <%= p.body %><br/>
      <%= link_to "Read More", post_path(p), class: "text-blue-500 hover:text-blue-700 underline" %>
    </li>
  <% end %>
</ul>
<br/>



