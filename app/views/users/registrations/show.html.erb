
<div class="bg-green-50 shadow-xl rounded-lg p-5 my-4 py-9 px-20">
  <div calss="flex">
    <div class="font-bold text-2xl mb-6 text-center">
      User Profile
    </div>
    <div>
      <%= link_to " Edit Profile ", edit_user_registration_path  %>
    </div>
    <div>
    <%= link_to edit_user_registration_path, class:" " do  %>
      <svg class="w-7 h-7 text-green-800 dark:text-white"
           aria-hidden="true"
           xmlns="http://www.w3.org/2000/svg"
           fill="currentColor"
           viewBox="0 0 20 18"
      >
        <path d="M12.687 14.408a3.01 3.01 0 0 1-1.533.821l-3.566.713a3 3 0 0 1-3.53-3.53l.713-3.566a3.01 3.01 0 0 1 .821-1.533L10.905 2H2.167A2.169 2.169 0 0 0 0 4.167v11.666A2.169 2.169 0 0 0 2.167 18h11.666A2.169 2.169 0 0 0 16 15.833V11.1l-3.313 3.308Zm5.53-9.065.546-.546a2.518 2.518 0 0 0 0-3.56 2.576 2.576 0 0 0-3.559 0l-.547.547 3.56 3.56Z"/>
        <path d="M13.243 3.2 7.359 9.081a.5.5 0 0 0-.136.256L6.51 12.9a.5.5 0 0 0 .59.59l3.566-.713a.5.5 0 0 0 .255-.136L16.8 6.757 13.243 3.2Z"/>
      </svg>
    <% end %>
    </div>
  </div>
  <% u = current_user %>

  <p class="font-semibold text-lg text-left my-2"> Profile Picture </p>
  <%= image_tag u.image, class:"h-96 rounded-3xl mb-6 grow" %>
  <div class="flex items-center my-2">
    <p class="font-semibold text-lg text-left"> First Name:&nbsp;  </p>
    <%= u.name %>
  </div>
  <div class="flex items-center my-2">
    <p class="font-semibold text-lg text-left"> Last Name:&nbsp;   </p>
    <%= u.lastName %>
  </div>
  <div class="flex items-center my-2">
    <p class="font-semibold text-lg text-left"> Gender:&nbsp;   </p>
    <%= u.gender %>
  </div>
  <div class="flex items-center my-2">
    <p class="font-semibold text-lg text-left"> Date Of Birth:&nbsp; </p>
    <%= u.date_of_birth %>
  </div>
  <div class="flex items-center my-2">
    <p class="font-semibold text-lg text-left"> Contact Number:&nbsp;   </p>
    <%= u.contact_number %>
  </div>
  <div class="flex items-center my-2">
    <p class="font-semibold text-lg text-left"> Email:&nbsp;  </p>
    <%= u.email %>
  </div>
</div>

